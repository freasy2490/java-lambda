        String[] types= new String[2];
        types[0]="PatentIsuRegSpecXMLA";
        types[1]="PatentPubXML";
        FTPClient ftpClient = new FTPClient();
        try {
			ftpClient.connect("s220ftp2.tipo.gov.tw", 21);
			System.out.print("connect success\n");
		} catch (SocketException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        try {
			ftpClient.login("anonymous", "");
			System.out.print("login success\n");

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
         
        // lists files and directories in the current working directory
        FTPFile[] years = null;
		try {
			years = ftpClient.listDirectories("PatentPubXML");
			System.out.print("list success\n");

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
         
        // iterates over the files and prints details for each
        System.out.print(years.length);
        for (FTPFile y : years) {
            String yr = y.getName();
            FTPFile[] files = null;
            try {
				files=ftpClient.listFiles("PatentPubXML/"+yr);
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
            for(FTPFile f:files) {
                System.out.println(f.getName());
            }
//            if (file.isDirectory()) {
//                details = "[" + details + "]";
//            }
//            details += "\t\t" + file.getSize();
//            details += "\t\t" + dateFormater.format(file.getTimestamp().getTime());
        }
         
        try {
			ftpClient.logout();
			System.out.print("logout success\n");

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
        try {
			ftpClient.disconnect();
			System.out.print("disconnect success\n");

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

        return "Hello from Lambda!";
        
    }
